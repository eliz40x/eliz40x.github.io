\$partial("templates/post-list.hamlet")$

<nav class="pagination">
  \$if(firstPageUrl)$
    <a href="$firstPageUrl$">First
  \$endif$
  \$if(previousPageUrl)$
    <a href="$previousPageUrl$">Previous
  \$endif$
  \$currentPageNum$ of $numPages$
  \$if(nextPageUrl)$
    <a href="$nextPageUrl$">Next
  \$endif$
  \$if(lastPageUrl)$
    <a href="$lastPageUrl$">Last
  \$endif$

